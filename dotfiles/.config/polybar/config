# echo -ne "\uf026" | xclip -selection clipboard
# and then copy!

[colors]
include-file = ~/.config/polybar/colors

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/center]
enable-ipc = true
monitor = DP-3.1
bottom = true
width = 100%
height = 24

background = ${colors.background}
foreground = ${colors.foreground}

line-color = ${colors.linecolor}
underline-size = 1
overline-size = 2
line-size = 10

border-bottom-size = 2
border-bottom-color = ${colors.bordercolor}

padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 2

font-0 = JetBrainsMono:pixelsize=12;1
font-1 = dina:pixelsize=9;1
font-2 = "Font Awesome 5 Pro:style=Regular:pixelsize=10;0"
font-3 = "Font Awesome 5 Pro:style=Solid:pixelsize=10;0"
font-4 = "Font Awesome 5 Brands:pixelsize=10;0"
font-5 = siji:pixelsize=10;1
font-6 = unifont:size=6;1

modules-left = i3 wifi wired
modules-center = xwindow
modules-right = pulseaudio cpu memory battery date

tray-position = right
tray-padding = 4
tray-maxsize = 16

wm-restack = i3

scroll-up = i3-deskprev
scroll-down = i3-desknext

[bar/laptop]
inherit = bar/center

enable-ipc = true
monitor = DP-4
bottom = true

underline-size = ${bar/center.overline-size}
overline-size = ${bar/center.underline-size}

wm-restack = ${bar/center.wm-restack}

[bar/right]
inherit = bar/center

enable-ipc = true
monitor = DP-3.2
bottom = true

underline-size = ${bar/center.overline-size}
overline-size = ${bar/center.underline-size}

modules-right = date

wm-restack = ${bar/center.wm-restack}

tray-position = none

[bar/left]
inherit = bar/center
monitor = DP-5

[bar/home]
inherit = bar/center
monitor = DP-3

[module/i3]
type = internal/i3
index-sort = true
pin-workspaces = true
strip-wsnumbers = true
wrapping-scroll = true

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-padding = 2
label-mode-background = ${colors.primary}

label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-foreground = ${colors.foreground}
label-focused-overline = ${colors.overline}
label-focused-underline = ${colors.linecolor}
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-padding = 2

label-urgent = %name% 
label-urgent-background = ${colors.urgent}
label-urgent-padding = 2

label-visible = %name%
label-visible-padding = 2

[module/cpu]
type = internal/cpu
interval = 2
label = %percentage%%
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.underline}

[module/memory]
type = internal/memory
interval = 2
label = %percentage_used%%
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.underline}

[module/wifi]
type = internal/network
;get your network by using "ip addr | sed '/^[0-9]/!d;s/: <.*$//'"
interface = wlp4s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-prefix = 
format-connected-prefix-foreground = ${colors.foreground}
format-connected-underline = ${colors.underline}
label-connected = %essid:8% %local_ip% %upspeed:2% %downspeed:2%

format-disconnected = 
format-disconnected-underline = ${colors.underline}
label-disconnected = 
label-disconnected-foreground = ${colors.urgent}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground}

[module/wired]
type = internal/network
;get your network by using "ip addr | sed '/^[0-9]/!d;s/: <.*$//'"
interface = enp0s31f6
interval = 3.0

format-underline = ${colors.underline}

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground}
label-connected = %local_ip% %upspeed:2% %downspeed:2%

format-disconnected = 
format-disconnected-underline = ${colors.underline}
label-disconnected = 
label-disconnected-foreground = ${colors.urgent}

[module/date]
type = internal/date
label = %{F${colors.foreground}%{F-} %date%  %{F#${colors.foreground}%{F-} %time%
date = %m-%d
time = %H:%M
interval = 5
format-underline = ${colors.underline}

[module/battery]
type = internal/battery
full-at = 100

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.underline}
label-charging = %percentage%%

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${colors.underline}
label-discharging = %percentage%%

format-full = <label-full>
format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = ${colors.foreground}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.foreground}
animation-charging-framerate = 750

[module/xwindow]
type = internal/xwindow
format = <label>
label-maxlen = 75

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
format-volume-underline = ${colors.underline}
label-volume =  %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = 
label-muted-foreground = ${colors.foreground}
format-muted-underline = ${colors.underline}
bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground}
