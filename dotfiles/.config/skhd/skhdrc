# Reload yabai
ctrl + shift - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# focus window
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

alt - j : yabai -m window --focus south
#alt - j : if [ "$(yabai -m query --spaces --space | jq -r '.type')" = "stack" ]; then (yabai -m window --focus stack.prev || yabai -m window --focus stack.last); else yabai -m window --focus prev || yabai -m window --focus last; fi
#alt + j = yabai -m query --spaces --space |
#  jq -re ".index" |
#  xargs -I{} yabai -m query --windows --space {} |
#  jq -sre 'add | map(select(."is-minimized"==false)) | sort_by(.display, .frame.y, .frame.x, .id) | . as $array | length as $array_length | index(map(select(."has-focus"==true))) as $has_index | if $array_length - 1 > $has_index then nth($has_index + 1).id else nth(0).id end' |
#  xargs -I{} yabai -m window --focus {}
  
alt - k : yabai -m window --focus north
#alt - k : if [ "$(yabai -m query --spaces --space | jq -r '.type')" = "stack" ]; then (yabai -m window --focus stack.next || yabai -m window --focus stack.first); else yabai -m window --focus next || yabai -m window --focus first; fi
#alt + k = yabai -m query --spaces --space |
#  jq -re ".index" |
#  xargs -I{} yabai -m query --windows --space {} |
#  jq -sre 'add | map(select(."is-minimized"==false)) | sort_by(.display, .frame.y, .frame.x, .id) | . as $array | length as $array_length | index(map(select(."has-focus"==true))) as $has_index | if $has_index > 0 then nth($has_index - 1).id else nth($array_length - 1).id end' |
#  xargs -I{} yabai -m window --focus {}
  

# swap managed window
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# move managed window
shift + alt + ctrl - h : yabai -m window --warp west
shift + alt + ctrl - j : yabai -m window --warp south
shift + alt + ctrl - k : yabai -m window --warp north
shift + alt + ctrl - l : yabai -m window --warp east

# rotate tree
alt - r : yabai -m space --rotate 90

# toggle window fullscreen zoom
alt - f : yabai -m window --toggle zoom-fullscreen

# float / unfloat window and center on screen
alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# toggle window split type
alt - e : yabai -m window --toggle split

# balance size of windows
shift + alt - 0 : yabai -m space --balance

# move window and focus desktop
shift + alt - 1 : yabai -m window --space chat
shift + alt - 2 : yabai -m window --space code
shift + alt - 3 : yabai -m window --space terminal
shift + alt - 4 : yabai -m window --space browser
shift + alt - 5 : yabai -m window --space tools
shift + alt - 6 : yabai -m window --space email

# Change desktop
alt - 1 : yabai -m space --focus chat
alt - 2 : yabai -m space --focus code
alt - 3 : yabai -m space --focus terminal
alt - 4 : yabai -m space --focus browser
alt - 5 : yabai -m space --focus tools
alt - 6 : yabai -m space --focus email

# create desktop, move window and follow focus - uses jq for parsing json (brew install jq)
shift + alt - n : yabai -m space --create && \
                   index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
                   yabai -m window --space "${index}" && \
                   yabai -m space --focus "${index}"

# focus last space
alt - o : yabai -m space --focus recent

# send window to monitor and follow focus
shift + alt - n : yabai -m window --display next; yabai -m display --focus next
shift + alt - p : yabai -m window --display previous; yabai -m display --focus previous
